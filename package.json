{
  "version": "1.0.1",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "main": "src/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "external": [
      "react",
      "react-dom"
    ],
    "minify": true
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "start:react": "cd ./example && bun run start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "name": "notify-zh",
  "author": "Xavier Gonzalez <xavivzla.g@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/xavivzla/notify-zh.git"
  },
  "keywords": [
    "notification",
    "react",
    "vue",
    "angular",
    "alert",
    "message"
  ],
  "description": "Es una peque√±a libreria de notificaciones para el FrontEnd. Esta libreria tiene un peso de 1.4 Kb.",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@types/jest": "^29.5.8",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
