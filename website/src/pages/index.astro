					position: position
				}

				// Add icon if provided
				if (iconInput.trim()) {
					options.icon = { el: iconInput }
				}

				// Show notification based on type
				switch (type) {
					case 'success':
						notify.success(options)
						break
					case 'error':
						notify.error(options)
						break
					case 'warning':
						notify.warning(options)
						break
					case 'info':
						notify.info(options)
						break
